package pom;

import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class Home_page {

	@FindBy(xpath="//a[@href='login']")
	public static WebElement Loginbutton;
	
	@FindBy(xpath="//select[@name='source']")
	public static WebElement Source;
	
	@FindBy(xpath="//select[@name='destination']")
	public static WebElement Destinationbutton;
	
	@FindBy(xpath="//option[@value='7']")
	public static WebElement Ahamadabad;
	
	@FindBy(xpath="//option[@value='1']")
	public static WebElement Banglore;
	
	@FindBy(xpath="//option[@value='4']")
	public static WebElement Chennai;

	@FindBy(xpath="//option[@value='11']")
	public static WebElement Hyderabad;
	
	@FindBy(xpath="//option[@value='6']")
	public static WebElement Kolkatta;
	
	@FindBy(xpath="//option[@value='2']")
	public static WebElement Mumbai;
	
	@FindBy(xpath="//option[@value='3']")
	public static WebElement Newdelhi;
	
	@FindBy(xpath="//option[@value='10']")
	public static WebElement tomato;
}